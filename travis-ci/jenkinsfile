pipeline {
    agent { 
        dockerfile {
            filename 'Dockerfile'
            dir 'travis-ci'
            label 'latest'
        }
     }

    stages{
        stage('build'){
            steps{
                sh 'python --version'
            }
        }
        stage('test'){
            steps{
                sh 'python3 math_test.py'
                sh 'echo "Testing Complete!";exit 0'
            }
        }
    }
}